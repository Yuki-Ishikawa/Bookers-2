<div class="container">
	<div class="row">
		<div class="col-lg-3">
		<%= render "users/profile", user: @user %>
		<%= render "books/new", book: @book %>
		</div>

		<div class="col-lg-9">
			<h1>Users</h1>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
								<!-- @userのままだったので画像が表示できなかった。userに変更後問題なく表示 -->
								<td><%= user.name %></td>
								<td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
	<%= render "books/footer" %>
</div>