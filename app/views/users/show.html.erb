
<div class="container">
	<% if flash[:notice] %>
	<%= flash[:notice] %>
	<% end %>
	<div class="row">
		<div class="col-lg-3">
		<%= render "users/profile", user: @user %>
		<%= render "books/new", book: @book %>
		</div>

		<div class="col-lg-9">
			<h1>Books</h1>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th colspan="3">Opinion</th>
						</tr>
					</thead>

					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
								<td><%= link_to book_path(book.id), class: "book_#{book.id}" do %><%= book.title %>
								<% end %>
								</td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
	<%= render "books/footer" %>
</div>