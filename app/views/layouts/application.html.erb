<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <div class="navbar-header">
                <h1 class="nav navbar-nav navbar-left">Bookers</h1>
              </div>
              <div class="collapse navbar-collapse" >
                <% if user_signed_in? %>
                  <!-- ここからログイン済みの時に表示される部分-->
                    <ul class="nav navbar-nav navbar-right">
                      <li class="">
                        <%= link_to " Home", user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
                      </li>
                      <li class="">
                        <%= link_to " Users", users_path, class: "glyphicon glyphicon-user users" %>
                      </li>
                      <li class="">
                        <%= link_to " Books", books_path, class: "glyphicon glyphicon-book books" %>
                      </li>
                      <li class="">
                        <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-ou logout" %>
                      </li>
                    </ul>
                    <!-- ここまで -->
                  <% else %>
                    <!-- ここからログインしてない時に表示される部分 -->
                    <ul class="nav navbar-nav navbar-right">
                      <li class="">
                        <%= link_to " Home", users_top_path, class: "glyphicon glyphicon-home home" %>
                      </li>
                      <li class="">
                        <%= link_to " about", users_about_path, class: "glyphicon glyphicon-link about" %>
                      </li>
                      <li class="">
                        <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
                      </li>
                      <li class="">
                        <%= link_to " log in", user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
                      </li>
                    </ul>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
