<div class="container">
	<% if @book.errors.any? %>
		<h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
	    <% @book.errors.full_messages.each do |message| %>
	    	<%= message %>
		<% end %>
	<% end %>
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			    <h4>Title</h4>
			    <%= f.text_field :title, class: "book_title col-xs-12" %>
			    <h4>Opinion</h4>
			    <%= f.text_area :body, class: "book_body col-xs-12" %>
			    <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id), class: "books" %> |
			<%= link_to "Back", books_path, class: "back" %>
		</div>
	</div>
	<%= render "books/footer" %>
</div>