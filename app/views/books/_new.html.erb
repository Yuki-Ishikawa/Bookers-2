<div class="row">
	<div class="col-xs-12">
		<h1>New book</h1>
		<!-- form_for部分 -->
		<!-- 新規投稿用入力フォーム -->
		<%= form_for(book, url: books_path) do |f| %>
		 
		    <h4>Title</h4>
		    <%= f.text_field :title, class: "book_title col-xs-12" %>
		 
		    <h4>Opinion</h4>
		    <%= f.text_area :body, class: "book_body col-xs-12" %>
		 
		    <p><%= f.submit "Create book",class: "btn btn-default col-xs-12  action btn btn-primary" %></p>
		<% end %>
	</div>
</div>