<h1>New book</h1>
<!-- form_for部分 -->
<!-- 新規投稿用入力フォーム -->
<%= form_for(@book, url: books_path) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
 
    <h4>Body</h4>
    <%= f.text_area :body,class: "book_body" %>
 
    <%= f.submit "Create book" %>
 
<% end %>

<%= render "books/new", book:@book %>