<div class="container">
	<% if flash[:notice] %>
	<%= flash[:notice] %>
	<% end %>
	<div class="row">
		<div class="col-lg-3">
		<%= render "users/profile", user: @user %>
		<%= render "books/new", book: @bookf %>
		</div>

		<div class="col-lg-9">
			<h1>Book detail</h1>
					<table class="table table-striped">
						<thead>
							<tr>
								<th></th>
								<th></th>
								<th></th>
								<th></th>
								<th colspan="5"></th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",  size: "40x40" %></td>
								<td><%= @book.title %></td>
								<td><%= @book.body %></td>
								<td><% if @book.user == current_user %>
									<%= link_to "edit", edit_book_path(@book.id), class: "edit_book_#{@book.id} actions btn btn-success" %>
								<% end %>
								</td>

								<td><% if @book.user == current_user %>
									<%= link_to "Destroy", book_path(@book), method: :delete, class: "destroy_book_#{@book.id} actions btn btn-danger" %>
								<% end %>
								</td>
							</tr>
						</tbody>
					</table>
		</div>
	</div>
	<%= render "books/footer" %>
</div>
